

<div class ="trainer-evaluations-table col-md-8 text-center">
  <table class="table">
      <tr>
        <th class="text-center">評価項目</th>
        <th class="text-center">５段階評価(１〜５の数字を一つずつお選びください）</th>
      </tr>
      <%= form_for(@trainer_evaluation) do |f| %>
        <%# <%= f.hidden_field :user_id %>
        <%= f.hidden_field :trainer_id %>

          <%# <tr id='star_rank1'> %>
            <td>
              <%= f.label :fun_rate, '楽しさ'%>
            </td>
            <td>
              <%= f.number_field :fun_rate, {min:1, max:5} %>
            </td>
          </tr>

          <%# <tr id='star_rank2'> %>
            <td>
              <%= f.label :understandable_rate, 'わかりやすさ'%>
            </td>
            <td>
              <%= f.number_field :understandable_rate,  {min:1, max:5} %>
            </td>
          </tr>

          <%# <tr id='star_rank3'> %>
            <td>
              <%= f.label :politeness_rate, 'ていねいさ'%>
            </td>
            <td>
            <%= f.number_field :politeness_rate,  {min:1, max:5}  %>
            </td>
          </tr>

          <%# <tr id='star_rank4'> %>
            <td>
            <%= f.label :kindness_rate,'優しさ'%>
            </td>
            <td>
            <%= f.number_field :kindness_rate,  {min:1, max:5}  %>
            </td>
          </tr>

        <%# <tr id='star_rank5'> %>
            <td>
            <%= f.label :passion_rate,'熱心さ'%>
            </td>
            <td>
            <%= f.number_field :passion_rate,  {min:1, max:5}  %>
            </td>
          </tr>
  </table>
</div>

        <div class="col-md-12">
          <%= f.label :content, '評価（自由記述）'%>
          <%= f.text_area :content, class: "form-control", rows: "5",
            placeholder:'皆様の評価が、FitNextのサービス向上に必要です。トレーナーさんから指導された内容やその感想を詳しくお書きください。' %>
        </div>

        <div class="trainer-evaluations-button">
          <%= f.submit '投稿する', class:"btn btn-success" %>
        </div>
<% end %>

