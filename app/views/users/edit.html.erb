<h1>プロフィール編集画面</h1>

  <%= form_with(model: @user,url: user_path(users_id: @user),local: true) do |f| %>

  <div class="field">
    <%= f.label :氏名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフン有り） %><br />
    <%= f.telephone_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="picture_field">
    <%= f.label :顔写真 %><br />
    <% if current_user.persisted? && current_user.picture? %>
      <%= image_tag current_user.picture.to_s %>
      <label><%= f.check_box :remove_picture %> 画像を削除</label>
    <% end %>
      <%= f.file_field :picture %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :infomation, autofocus: true, autocomplete: "infomation" %>
  </div>

    <div class="field">
    <%= f.label :スカイプ名 %><br />
    <%= f.text_field :skype, autofocus: true, autocomplete: "skype" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %> <i>(変更しない場合は、記入しないでください。)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<h3>アカウントを削除する</h3>

<p><%= button_to "アカウントを削除", data: { confirm: "本当に削除しますか?" }, method: :delete %>