<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class ="row">
        <section class="user-card col-md-12">
          <%# <img class="user-card-img" src="http://webcreatorbox.com/sample/images/bear.jpg" alt=""> %>
          <div class="user-card-img">
            <% if @user.picture_url %>
            <%= image_tag @user.picture.url %>
            <% end %>
          </div>
            <div class="user-card-content">
              <h1 class="user-card-title"><%= @user.name %></h1>
              <h3 class="text-center">基本情報</h3>
              <p class="user-card-text">
                <span>性別: <%= @user.sex %></span></br>
                <span>生年月日: <%= @user.birthday %></span></br>
                <span>Skype名: <%= @user.skype %></span></br>
                  <% if @user.trainer.blank? %>
                    <span>メールアドレス: <%= @user.email %></span></br>
                    <span>電話番号: <%= @user.tel %></span></br>
                    <span>住所: <%= @user.address %></span></br>
                  <% end %>
                  <% unless @user.trainer.blank? %>
                    <span>資格：<%= @user.trainer.license %></span></br>
                    <span>経験年数：<%= @user.trainer.experience %>年</span></br>
                    <span>所属先：<%= @user.trainer.belongs %></span></br>
                  <% end %>
              </p>
              <h3 class="text-center">自己紹介</h3>
              <div class="user-card-content2">
                <span><%= @user.infomation %></span>
              </div>
            </div>
              <div class="user-card-link">
                <% if @user.trainer.present? && @user != current_user%>
                  <a href="https://login.live.com/login.srf?wa=wsignin1.0&rpsnv=13&ct=1567423278&rver=7.1.6819.0&wp=MBI_SSL&wreply=https%3A%2F%2Flw.skype.com%2Flogin%2Foauth%2Fproxy%3Fclient_id%3D572381%26redirect_uri%3Dhttps%253A%252F%252Fweb.skype.com%252FAuth%252FPostHandler%26state%3D2383ec72-933d-42d4-b176-dfc30bc9400b%26site_name%3Dlw.skype.com&lc=1033&id=293290&mkt=ja-JP&psi=skype&lw=1&cobrandid=2befc4b5-19e3-46e8-8347-77317a16a5a5&client_flight=ReservedFlight33%2CReservedFlight67" target="_blank">相談する</br></a>
                  <a><%= link_to '評価する', new_user_trainer_evaluation_path(user_id: @user, trainer_id: @user.trainer) %></br></a>
                <% end %>
                <%if current_user.id == @user.id %>
                  <a><%= link_to 'プロフィールを編集する', edit_user_path(@user.id), class:"btn-gradient-radius-user" %></a>
                <% end %>
              </div>
            </div>
        </section>
      </div>
    </div>
  </div>
</div>
