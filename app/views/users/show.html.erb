

<h1><%= @user.name %>のページ</h1>
<%if current_user.id == @user.id %>
  <%= link_to 'プロフィールを編集する', edit_user_path(@user.id) %>
<% end %>

  <body>
    <div>
      <span>氏名: <%= @user.name %></span>
    </div>

    <div>
      <span>生年月日: <%= @user.birthday %></span>
    </div>

    <div>
      <span>性別: <%= @user.sex %></span>
    </div>

  <% if @user.trainer.blank? %>
    <div>
      <span>メールアドレス: <%= @user.email %></span>
    </div>

    <div>
      <span>電話番号: <%= @user.tel %></span>
    </div>

    <div>
      <span>住所: <%= @user.address %></span>
    </div>
  <% end %>

    <div class="picture_field">
      <span>顔写真: </span>
      <% if @user.picture_url %>
      <%= image_tag @user.picture.url %>
      <% end %>
    </div>

    <div>
      <span>自己紹介: <%= @user.infomation %></span>
    </div>

    <div></div>
      <span>Skype名: <%= @user.skype %></span>
    </div>

  <% unless @user.trainer.blank? %>
    <div>
      <span>資格：<%= @user.trainer.license %></span>
    </div>

    <div>
      <span>経験年数：<%= @user.trainer.experience %>年</span>
    </div>

    <div>
      <span>所属先：<%= @user.trainer.belongs %></span>
    </div>

<h3>評価</h3>
  <% @trainer.trainer_evaluations.each do |trainer_evaluation| %>
    <div>
      <span>「楽しさ」：<%= trainer_evaluation.fun_rate %></span>
    </div>
    <div>
      <span>「わかりやすさ」：<%= trainer_evaluation.understandable_rate %></span>
    </div>
    <div>
      <span>「丁寧さ」：<%= trainer_evaluation.politeness_rate %></span>
    </div>
    <div>
      <span>「優しさ」：<%= trainer_evaluation.kindness_rate %></span>
    </div>
    <div>
      <span>「熱心さ」：<%= trainer_evaluation.passion_rate %></span>
    </div>
    <div>
      <span>「自由記述」：<%= trainer_evaluation.content %></span>
    </div>
  <% end %>
  <% end %>

  <% if @user.trainer.present? %>
    <li><%= link_to '評価する', new_user_trainer_evaluation_path(user_id: @user, trainer_id: @user.trainer) %></li>
  <% end %>

  <% if @user.try(:admin?) && ! (@user.id == @user) %>
    <h1>管理者ページ<h3>
    <%= link_to '管理者ページ', "/admin" %>
  <% end %>

