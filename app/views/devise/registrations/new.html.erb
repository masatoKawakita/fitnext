<%= stylesheet_link_tag 'registration', media: 'all', 'data-turbolinks-track': 'reload' %>
<h1 class="text-center">会員登録</h1>
<h4 class="text-center">＊の項目は必ず記入してください</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mx-auto">

    <div class="card" style= "max-width: 540px;">

      <div class="card-body px-lg-5 pt-0">

          <form class="text-center" style="color: #f2d50f;" action="#!">

              <div class="form-row">
                  <div class="col">
                      <!-- First name -->
                      <div class="md-form">
                          <%= f.label :＊氏名 %>
                          <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => 'form-control' %>
                      </div>
                  </div>
              </div>

              <div class="md-form mt-0">
                  <%= f.label :＊生年月日 %>
                  <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday" ,placeholder: '1990-01-01', :class => 'form-control'%>
              </div>

              <div class="md-form mt-0">
                <%= f.label :＊性別 %>
                <%= f.label :男 %>
                <%= f.radio_button :sex, :男 %>
                <%= f.label :女 %>
                <%= f.radio_button :sex, :女 %>
                <%= f.label :その他 %>
                <%= f.radio_button :sex, :その他 %>
              </div>

              <div class="md-form mt-0">
              <%= f.label :＊メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
              </div>

              <div class="md-form mt-0">
                <%= f.label :＊電話番号（ハイフン有り） %>
                <%= f.telephone_field :tel, autofocus: true, autocomplete: "tel", :class => 'form-control' %>
              </div>

              <div class="md-form mt-0">
                <%= f.label :顔写真 %>
                <%= f.file_field :picture, autofocus: true, autocomplete: "picture", :class => 'form-control' %>
              </div>

              <div class="md-form mt-0">
                <%= f.label :住所 %>
                <%= f.text_field :address, autofocus: true, autocomplete: "address", :class => 'form-control' %>
              </div>

              <div class="md-form mt-0">
                <%= f.label :自己紹介 %>
                <%= f.text_area :infomation, autofocus: true, autocomplete: "infomation", :class => 'form-control' %>
              </div>

              <div class="md-form mt-0">
                <%= f.label :スカイプ名 %>
                <%= f.text_field :skype, autofocus: true, autocomplete: "skype", :class => 'form-control' %>
              </div>

              <div class="md-form">
                <%= f.label :＊パスワード %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
              </div>

              <div class="md-form">
                <%= f.label :＊パスワード（確認用） %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
              </div>
                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">
                  <%= "会員登録" %>
                </button>
          </form>
      </div>
    </div>
  </div>
<% end %>

<h4 class="text-center">
<%= render "devise/shared/links"%>
</h4>