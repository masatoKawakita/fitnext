<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <strong><%= f.label :＊の項目は必ず記入してください。%></strong><br />

  <div class="field">
    <%= f.label :＊氏名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :＊生年月日 %><br />
    <%= f.date_field :birthday, autofocus: true, autocomplete: "birthday" ,placeholder: '1990-01-01'%>
  </div>

  <div class="field">
    <%= f.label :＊性別 %><br />
    <%= f.label :男 %>
    <%= f.radio_button :sex, :男 %>
    <%= f.label :女 %>
    <%= f.radio_button :sex, :女 %>
    <%= f.label :その他 %>
    <%= f.radio_button :sex, :その他 %>
  </div>

  <div class="field">
    <%= f.label :＊メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :＊電話番号（ハイフン有り） %><br />
    <%= f.telephone_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="picture_field">
    <%= f.label :顔写真 %><br />
    <%= f.file_field :picture, autofocus: true, autocomplete: "picture" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :infomation, autofocus: true, autocomplete: "infomation" %>
  </div>

    <div class="field">
    <%= f.label :スカイプ名 %><br />
    <%= f.text_field :skype, autofocus: true, autocomplete: "skype" %>
  </div>

  <div class="field">
    <%= f.label :＊パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :＊パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
