<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <%= notice %>
  <%= alert %>
</head>

<body>
  <%= form_for(resource, as: resource_name, url: create_trainer_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mx-auto">
      <div class="session-wrapper fadeInDown">
        <div id="session-formContent">
          <!-- Tabs Titles -->

          <!-- Icon -->
          <div class="fadeIn first">
          <%= image_tag ('/FitNext-logo.png') %>
          <h2>トレーナー会員登録</h2>
          </div>

          <!-- Form -->
          <form>
            <div>
              <%= f.text_field :name, autofocus: true, placeholder: '山田 太郎',class:'fadeIn second session-input'  %>
            </div>
            <div>
              <%= f.date_field :birthday, autofocus: true, class:'fadeIn second session-input' %>
            </div>
            <div>
              <%= f.label :男 %>
              <%= f.radio_button :sex, :男 ,class:'fadeIn second session-input'%>
              <%= f.label :女 %>
              <%= f.radio_button :sex, :女,class:'fadeIn second session-input' %>
              <%= f.label :その他 %>
              <%= f.radio_button :sex, :その他,class:'fadeIn second session-input' %>
            </div>
            <div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス',class:'fadeIn second session-input' %>
            </div>
            <div>
              <%= f.telephone_field :tel, autofocus: true, autocomplete: "tel", placeholder: '電話番号',class:'fadeIn second session-input' %>
            </div>
            <%= f.fields_for :trainer do |f| %>
              <div>
                <%= f.text_field :license, autofocus: true, autocomplete: "license",placeholder: '資格' ,class:'fadeIn third session-input' %>
              </div>
              <div>
                <%= f.text_field :experience, autofocus: true, placeholder: '指導経験年数', autocomplete: "experience",class:'fadeIn third session-input' %>年
              </div>
              <div>
                <%= f.text_field :belongs, autofocus: true, autocomplete: "belongs", placeholder: '所属先',class:'fadeIn third session-input' %>
              </div>
            <% end %>
            <div>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード',class:'fadeIn third session-input'%>
            </div>
            <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワード(確認用)',class:'fadeIn third session-input' %>
            </div>
            <div class="fadeIn fourth">
            <%= f.submit "会員登録", class:'session-button' %>
            </div>
          </form>
          <div id="session-formFooter", class="session-link">
            <%= render "devise/shared/links" %>
          </div>
      <% end %>
        </div>
      </div>
    </div>
</body>